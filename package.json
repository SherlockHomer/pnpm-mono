{
  "name": "pnpm-mono",
  "version": "1.0.0",
  "description": "the project will have everything",
  "scripts": {
    "postinstall": "husky install",
    "clean": "find . -name \"node_modules\" -type d -prune -exec rm -rf '{}' + & rm pnpm-lock.yaml",
    "commit": "git-cz",
    "build": "nx run-many -t build",
    "build:affected": "nx affected -t build",
    "test": "nx run-many -t test",
    "test:affected": "nx affected -t test",
    "test:unit": "nx run-many -t test:unit",
    "test:unit:affected": "nx affected -t test:unit",
    "test:comp:affected": "nx affected -t test:comp",
    "docker:mono:container": "docker build . --target mono-dep --tag mono-dep:latest -f ./docker/build.Dockerfile"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "^7.22.15",
    "@babel/core": "^7.22.20",
    "@babel/preset-env": "^7.22.20",
    "@babel/preset-react": "^7.22.15",
    "@commitlint/cli": "^17.6.5",
    "@commitlint/config-conventional": "^17.6.5",
    "@commitlint/config-pnpm-scopes": "^17.5.0",
    "@commitlint/cz-commitlint": "^17.5.0",
    "@nx/jest": "17.1.2",
    "@nx/js": "17.1.2",
    "@nx/react": "^17.1.2",
    "@nx/webpack": "17.1.2",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.5.7",
    "@svgr/webpack": "^8.0.1",
    "@swc-node/register": "~1.6.7",
    "@swc/cli": "~0.1.62",
    "@swc/core": "~1.3.85",
    "@testing-library/react": "14.0.0",
    "@types/jest": "^29.4.0",
    "@types/node": "18.14.2",
    "@types/react": "18.2.33",
    "@types/react-dom": "18.2.14",
    "babel-jest": "29.7.0",
    "chalk": "^5.3.0",
    "commitizen": "^4.3.0",
    "cypress": "^13.2.0",
    "eslint": "8.38.0",
    "eslint-plugin-cypress": "^2.15.1",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-jsx-a11y": "6.7.1",
    "eslint-plugin-react": "7.32.2",
    "eslint-plugin-react-hooks": "4.6.0",
    "husky": "^8.0.3",
    "jest": "29.7.0",
    "jest-environment-jsdom": "29.7.0",
    "lint-staged": "^14.0.1",
    "nx": "^16.3.2",
    "nx-cloud": "^16.0.5",
    "prettier": "^3.0.3",
    "react-refresh": "^0.10.0",
    "syncpack": "^11.2.1",
    "ts-jest": "^29.1.0",
    "ts-node": "10.9.1",
    "typescript": "~5.2.2",
    "url-loader": "^4.1.1"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "engines": {
    "node": ">=18.18.0"
  },
  "packageManager": "pnpm@8.6.2",
  "dependencies": {
    "@swc/helpers": "~0.5.2",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-router-dom": "6.11.2",
    "tslib": "^2.3.0"
  }
}
