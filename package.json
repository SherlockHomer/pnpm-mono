{
  "name": "pnpm-mono",
  "version": "1.0.0",
  "description": "the project will have everything",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "postinstall": "husky install",
    "clean": "find . -name \"node_modules\" -type d -prune -exec rm -rf '{}' + & rm pnpm-lock.yaml",
    "commit": "git-cz",
    "build:all": "nx run-many --target=build --all",
    "build:affected": "nx affected --target=build",
    "test:unit:all": "nx run-many --target=test:unit --all",
    "test:unit:affected": "nx affected --target=test:unit",
    "docker:mono:container": "docker build . --target mono-dep --tag mono-dep:latest -f ./docker/build.Dockerfile"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "^7.22.15",
    "@babel/core": "^7.22.20",
    "@babel/preset-env": "^7.22.20",
    "@babel/preset-react": "^7.22.15",
    "@commitlint/cli": "^17.6.5",
    "@commitlint/config-conventional": "^17.6.5",
    "@commitlint/config-pnpm-scopes": "^17.5.0",
    "@commitlint/cz-commitlint": "^17.5.0",
    "chalk": "^5.3.0",
    "commitizen": "^4.3.0",
    "eslint": "8.38.0",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "nx": "^16.3.2",
    "nx-cloud": "^16.0.5",
    "prettier": "^3.0.3",
    "syncpack": "^11.2.1"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "engines": {
    "node": ">=18.18.0"
  },
  "packageManager": "pnpm@8.6.2",
  "lint-staged": {
    "*.{json,vue}": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "eslint --fix",
      "prettier --parser=typescript --write"
    ],
    "*.{js,jsx,cjs,mjs}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{yml,yaml,css,scss,md}": [
      "prettier --write"
    ]
  }
}
