{
  "name": "react-3d",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --watchAll=false",
    "serve": "serve -s build",
    "eject": "react-scripts eject",
    "lint": "eslint src --ext .js --ext .ts --fix",
    "docker:build:container": "docker build ../../ --target react-3d-ng --tag react-3d-ng:latest -f ./docker/Dockerfile",
    "docker:dev:container": "docker build ../../ --target dev-react-3d --tag dev-react-3d:latest -f ./docker/Dockerfile.dev"
  },
  "dependencies": {
    "@mono/web-lib": "workspace:^",
    "@mono/web-ui": "workspace:^",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "prop-types": "^15.8.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "web-vitals": "^2.1.4"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@mono/eslint-config-react": "workspace:^",
    "@mono/typescript-config": "workspace:^",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "jest": "27.5.1",
    "jest-environment-jsdom": "27.5.1",
    "serve": "^14.2.1",
    "typescript": "4"
  }
}
